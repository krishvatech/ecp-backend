# Django core settings
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Postgres)
POSTGRES_DB=ecp
POSTGRES_USER=ecp
POSTGRES_PASSWORD=ecp_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis (broker, cache, channels)
REDIS_URL=redis://redis:6379/0

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000

# DRF throttling
DRF_THROTTLE_ANON=10/min
DRF_THROTTLE_USER=100/min

# Storage configuration (S3 or GCS). Leave empty if unused.
# AWS S3
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION_NAME=
AWS_S3_CUSTOM_DOMAIN=
# Google Cloud Storage
GCS_BUCKET_NAME=
GOOGLE_APPLICATION_CREDENTIALS=

# Simple JWT lifetimes
SIMPLE_JWT_ACCESS_LIFETIME_MIN=30
SIMPLE_JWT_REFRESH_LIFETIME_DAYS=7